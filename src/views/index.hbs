<div class="row">
  <div class="col-md-6">
    <form action="/send-sms" method="POST" class="card card-body">
      <div class="form-group">
        <input type="text" name="message" placeholder="Write your message" class="form-control" autofocus>
      </div>
      <div class="form-group">
        <input type="phoneSecret" name="phone" placeholder="+205123123" class="form-control" autocomplete="off">
      </div>
      <button class="btn btn-primary btn-block">
        Send
      </button>
    </form>
  </div>
  <div class="col-md-6">
    {{#if smsList}}

    {{#each smsList}}

    <div class="card card-body">
      <p>{{Body}}</p>

      <span>
        {{To}}
      </span>

      {{!-- <span>{{hideNumber To}}</span> --}}
    </div>

    {{/each}}

    {{else}}
    <p>No sms yer</p>
    {{/if}}

  </div>
</div>